<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.astradeni.backupmanager.view.RootLayoutController">
	<top>
		<ButtonBar prefHeight="40.0" prefWidth="610.0" BorderPane.alignment="CENTER">
			<buttons>
				<Button fx:id="myButton" minWidth="49.0" mnemonicParsing="false" onAction="#handleExit" prefHeight="25.0" prefWidth="91.0" text="Exit" />
            <Button fx:id="fileButton" mnemonicParsing="false" onAction="#getFiles" text="Files" />
            <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#getSettings" text="Settings" />
			</buttons>
         <BorderPane.margin>
            <Insets left="25.0" right="25.0" />
         </BorderPane.margin>
		</ButtonBar>
	</top>
	<bottom>
		<TextArea fx:id="myTextArea" prefHeight="1259.0" prefWidth="647.0" BorderPane.alignment="CENTER" />
	</bottom>
</BorderPane>
